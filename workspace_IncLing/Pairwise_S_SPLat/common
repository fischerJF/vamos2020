#!/bin/bash

BASEDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"


SCRIPST_DIR="${BASEDIR}/bash-scripts"
LIBSDIR="$BASEDIR/libs"
JAVASCRIPTSDIR="$BASEDIR/java-scripts"
EVOSUITE="$LIBSDIR/evosuite-20130504.jar"
JUNIT="$LIBSDIR/junit-4.11.jar"
LOG4J="$LIBSDIR/log4j-1.2.13.jar"
SKARINGA="$LIBSDIR/skaringa-r3p7.jar"
XSTREAM="$LIBSDIR/xstream-1.1.3.jar"
JUNIT3="$LIBSDIR/junit-3.8.1.jar"
ASM="$LIBSDIR/asm-all-5.0.3.jar"

CP_SPLAT="${BASEDIR}/bin"

export BASEDIR
export SCRIPST_DIR
export LIBSDIR
export EVOSUITE
export JUNIT
export JUNIT3
export LOG4J
export ASM
export SKARINGA
export XSTREAM
export CP_SPLAT